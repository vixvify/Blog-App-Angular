generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  username  String  @unique
  password String
}

model Blog {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  content String
  author String
  date String
  authorId String
}

model Comment {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  detail String
}
